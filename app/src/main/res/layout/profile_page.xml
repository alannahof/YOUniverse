<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/profile_UserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:paddingTop="20dp"
        android:text="Your Name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textStyle="bold"
        tools:fontFamily="@font/acme"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="25dp" />

    <ImageView
        android:id="@+id/profile_avatar_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/avatar_knight_fore"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="139dp" />

    <LinearLayout
        android:id="@+id/profile_level_achieved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <ImageView
            android:id="@+id/profile_level_image"
            android:layout_width="76dp"
            android:layout_height="47dp"
            android:layout_weight="0.2"
            app:srcCompat="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/profile_level_reached"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Junior Explorer" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_levels_completed"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_level1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 1 Complete"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/profile_level2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 2 Complete"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/profile_level3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 3 Complete"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/profile_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_manage" />

        <TextView
            android:id="@+id/profile_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <TextView
            android:id="@+id/profile_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="200 "
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>