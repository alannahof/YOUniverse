<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space_theme"
    android:orientation="vertical">

    <TextView
        android:id="@+id/profile_UserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="Your Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textStyle="bold"
        tools:fontFamily="@font/acme" />

    <LinearLayout
        android:id="@+id/profile_level_achieved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <ImageView
            android:id="@+id/profile_avatar_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/alien_legs_big" />

        <EditText
            android:id="@+id/profile_level_reached"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Junior Explorer"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/profile_level1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/darker_gray"
            android:text="Level 1 Complete"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/profile_level2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/darker_gray"
            android:text="Level 2 Complete"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/profile_level3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/darker_gray"
            android:text="Level 3 Complete"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:baselineAligned="false"
        android:gravity="bottom|end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/settings_footer"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@android:drawable/ic_menu_preferences" />

        <ImageView
            android:id="@+id/profile_footer"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:onClick="selectAvatar"
            android:scaleType="fitCenter"
            android:src="@drawable/alien_guide" />

        <ImageView
            android:id="@+id/back_map_footer"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:onClick="selectAvatar"
            android:scaleType="fitCenter"
            android:src="@drawable/strineo" />

        <TextView
            android:id="@+id/tokens_footer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:gravity="right"
            android:text="200 tokens"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>