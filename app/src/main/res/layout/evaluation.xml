<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space_theme"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="SUCCESS!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textStyle="bold"
        tools:fontFamily="@font/acme" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Score Place Holder"
        android:textAlignment="center"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/profile_avatar_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/alien_legs_big" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/acme"
        android:text="Congratulations! You made it through Smeda!  Social media can have a big influence on how we perceive ourselves..."
        android:textAlignment="center"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:baselineAligned="false"
        android:gravity="bottom|end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/settings_footer"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@android:drawable/ic_menu_preferences" />

        <ImageView
            android:id="@+id/profile_footer"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:onClick="selectAvatar"
            android:scaleType="fitCenter"
            android:src="@drawable/alien_guide" />

        <ImageView
            android:id="@+id/back_map_footer"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:onClick="selectAvatar"
            android:scaleType="fitCenter"
            android:src="@drawable/strineo" />

        <TextView
            android:id="@+id/tokens_footer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:gravity="right"
            android:text="200 tokens"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>
