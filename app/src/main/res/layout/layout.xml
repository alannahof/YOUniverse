<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="YOUniverse"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textStyle="bold"
        tools:fontFamily="@font/acme" />

    <ImageView
        android:id="@+id/planet2"
        android:layout_width="300dp"
        android:layout_height="269dp"
        android:layout_gravity="left"
        android:src="@drawable/ice_planet" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="500dp">


        <ImageView
            android:id="@+id/planet1"
            android:layout_width="match_parent"
            android:layout_height="381dp"
            android:layout_weight="6"
            android:cropToPadding="false"
            android:src="@drawable/strineo"
            app:srcCompat="@drawable/strineo" />

        <ImageView
            android:id="@+id/speech"
            android:layout_width="415dp"
            android:layout_height="150dp"
            android:layout_gravity="center|top"
            android:layout_weight="1"
            android:cropToPadding="false"
            android:src="@drawable/speech_bubble" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/instructionsText"
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_gravity="top|center"
                android:layout_weight="1"
                android:paddingTop="25dp"
                android:text="These are the instructions"
                android:textAlignment="center"
                android:textColorHint="@android:color/background_dark"
                android:textSize="14sp"
                tools:fontFamily="@font/acme" />

            <Button
                android:id="@+id/commenceGame"
                android:layout_width="97dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginBottom="45dp"
                android:background="?android:attr/colorControlNormal"
                android:text="Commence!" />

        </LinearLayout>


        <ImageView
            android:id="@+id/alien_guide"
            android:layout_width="171dp"
            android:layout_height="471dp"
            android:onClick="changeText"
            android:src="@drawable/alien_guide" />



    </FrameLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/profile_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_manage" />

        <TextView
            android:id="@+id/profile_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

    </LinearLayout>


    <TextView
        android:id="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1" />


</LinearLayout>
