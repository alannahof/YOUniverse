<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="YOUniverse"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textStyle="bold"
        tools:fontFamily="@font/acme" />

    <ImageView
        android:id="@+id/planet2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="left"
        android:src="@drawable/ice_planet" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="700dp">


        <ImageView
            android:id="@+id/planet1"
            android:layout_width="match_parent"
            android:layout_height="381dp"
            android:layout_weight="6"
            android:cropToPadding="false"
            android:src="@drawable/strineo"
            app:srcCompat="@drawable/strineo" />

        <ImageView
            android:id="@+id/speech"
            android:layout_width="415dp"
            android:layout_height="250dp"
            android:layout_gravity="center|top"
            android:layout_weight="1"
            android:cropToPadding="false"
            android:src="@drawable/speech_bubble" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/instructions_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:srcCompat="@drawable/instructions" />

        </LinearLayout>


        <ImageView
            android:id="@+id/alien_guide"
            android:layout_width="171dp"
            android:layout_height="471dp"
            android:src="@drawable/alien_guide" />


    </FrameLayout>


    <TextView
        android:id="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1" />


</LinearLayout>
