<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    //  android:background="@drawable/space_theme2"

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="YOUniverse"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textStyle="bold"
        tools:fontFamily="@font/acme" />


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/planet2"
            android:layout_width="300dp"
            android:layout_height="269dp"
            android:layout_gravity="left"
            app:srcCompat="@drawable/ice_planet" />

        <ImageView
            android:id="@+id/speech"
            android:layout_width="239dp"
            android:layout_height="183dp"
            android:layout_gravity="bottom|right"
            android:layout_weight="1"
            android:cropToPadding="false"
            app:srcCompat="@drawable/speech_bubble" />


        <TextView
            android:id="@+id/greetingsText"
            android:layout_width="181dp"
            android:layout_height="186dp"
            android:layout_gravity="bottom|right"
            android:layout_weight="2"
            android:paddingRight="50dp"
            android:paddingTop="25dp"
            android:text="Greetings! you've entered the YOUniverse. Are you ready?!"
            android:textAlignment="center"
            android:textColorHint="@android:color/background_dark"
            android:textSize="14sp"
            tools:fontFamily="@font/acme" />

        <Button
            android:id="@+id/yeahButton"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_weight="2"
            android:text="YEAH!" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="500dp">


        <ImageView
            android:id="@+id/planet1"
            android:layout_width="match_parent"
            android:layout_height="381dp"
            android:layout_weight="6"
            android:cropToPadding="false"
            app:srcCompat="@drawable/strineo" />

        <ImageView
            android:id="@+id/alien_guide"
            android:layout_width="171dp"
            android:layout_height="255dp"
            android:onClick="changeText"
            app:srcCompat="@drawable/alien_guide" />



    </FrameLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/profile_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_manage" />

        <Button
            android:id="@+id/popUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

        <TextView
            android:id="@+id/profile_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <TextView
            android:id="@+id/profile_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="200 "
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>

